<div class="container">

  <div class="d-flex flex-column justify-content-center min-vh-100">

    <div class="row g-3 justify-content-center" style="margin-bottom: 0.7em;">
      <div class="col-md-6 text-center" style="font-size: 2em;">
        <strong class="text-gray">Sign Up as Super User</strong>
      </div>
    </div>

    <%= form_for @user do |f| %>
      <div class="row g-3 justify-content-center" style="">
        <div class="col-md-6" style="">
          <div class="form-floating mb-3">
            <%= f.text_field :username, class: 'form-control form-control-lg', id: "username",
                             spellcheck: "false" %>
            <label for="username" id="username-label" class="text-secondary">Username</label>
          </div>
        </div>
      </div>

      <div class="row g-3 justify-content-center" style="margin-bottom: 0.7em;">
        <div class="col-md-3">
          <div class="form-floating mb-3">
            <%= f.password_field :password, class: 'form-control form-control-lg', id: "password",
                             spellcheck: "false" %>
            <label for="password" id="password-label" class="text-secondary">Password</label>
          </div>
        </div>

        <div class="col-md-3" style="">
          <div class="form-floating mb-3">
            <%= f.password_field :password_confirmation, class: 'form-control form-control-lg',
                                 id: "password-confirmation", spellcheck: "false" %>
            <label for="password-confirmation" id="password-confirmation-label" class="text-secondary">Confirm Password</label>
          </div>
        </div>
      </div>

      <div class="row g-3 justify-content-center" style="margin-bottom: 0.7em">
        <div class="col-md-6 m-0">
          <%= f.submit "Sign Up", class: "btn btn-lg btn-yellow btn-block w-100 fw-bolder mt-2 mb-3" %>
        </div>
      </div>
    <% end %>

    <div class="row justify-content-center">
      <div class="col-md-4 text-center">
        <hr style="margin-bottom: 8px; margin-top: 8px; color: #666666;">
        <%= render "shared/menu" %>
      </div>
    </div>

  </div>
</div>